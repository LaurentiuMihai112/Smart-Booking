{
    "name": "SmartBooking-Plugin",
    "version": "0.5.1",
    "manifest_version": 2,
    "description": "Get various additional details about hotels on booking.com",
    "icons": {
        "16": "icons/logo16.png",
        "48": "icons/logo48.png",
        "128": "icons/logo128.png"
    },
    "background": {
        "scripts": [
            "src/bg/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icons/logo32.png",
        "default_title": "browser action demo",
        "default_popup": "src/pages/popup.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "cookies",
        "tabs",
        "https://www.booking.com/*",
        "https://euopendata.herokuapp.com/*",
        "https://betonrats.000webhostapp.com/*"
    ],
    "content_scripts": [{
        "matches": [
            "https://www.booking.com/hotel/*"
        ],
        "js": [
            "js/chartjs/chart.min.js",
            "src/inject/data.js",
            "src/inject/inject.js"
        ],
        "css": [
            "src/inject/inject.css",
            "src/inject/weather.css"
        ]
    }],
    "web_accessible_resources": [
        "/src/images/*",
        "https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.2.0/chart.min.js"
    ]
}